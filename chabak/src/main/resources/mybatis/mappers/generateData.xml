<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- SQL Mapping 설정 -->
<mapper namespace="generateData">
	<!-- SQL 객체 --><!-- 게시물 추가 sql parameterType은 이미 alias를 설정했으므로 전체경로를 쓸 필요 없다-->
	<!-- insert,update,delete 객체는 영향받은 레코드의 카운트를 정수로 반환 -->

	<select id="selectAllReadCount" resultType="ReadCount">
		SELECT * FROM ReadCount
	</select>

	<select id="selectAllReview" resultType="Review">
		select * from review
	</select>

	<select id="selectReadCount" parameterType="ReadCount" resultType="ReadCount">
		SELECT * FROM ReadCount
		WHERE reviewNo = #{reviewNo}
		and id = #{id}
	</select>

	<insert id="insertReadCount" parameterType="ReadCount" >
		insert into ReadCount(reviewNo,id)
		values
		(#{reviewNo},#{id})
	</insert>
	<insert id="insertReadCountForTest" parameterType="ReadCount" >
		insert into ReadCount(reviewNo,id,readCount)
		values
		(#{reviewNo},#{id},#{readCount})
	</insert>

	<update id="updateReadCountForTest" parameterType="ReadCount">
		UPDATE ReadCount SET READCOUNT = #{readCount}
		WHERE REVIEWNO = #{reviewNo}
		and id = #{id}
	</update>

	<update id="updateReadCountFromReview" parameterType="Review">
		UPDATE Review SET READCOUNT = READCOUNT + #{readCount}
		WHERE REVIEWNO = #{reviewNo}
	</update>

	<select id="getAllMember" resultType="Member">
		select * from member
	</select>
	<select id="getLastCreateMemberByTest" resultType="String">
    select id
    from
		(select id
		from member
		where id like 'id%'
		order by regdate desc)
		where rownum = 1
	</select>

</mapper>