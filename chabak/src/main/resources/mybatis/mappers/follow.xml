<!-- SQL Mapping 설정 -->
    <mapper namespace="follow">


    <select id="selectDataHashMapServiceList" resultType="map">
        SELECT followerId
        from follow
        where followingId = #{id}
    </select>

    <select id="followerIdAndProfileTest" resultType="map">
        select member.id , member.savename
        from follow, member
        where follow.followingid = #{id} and follow.followerid = member.id
    </select>

